<mvc:View
    controllerName="fico.zbindglaccountlist.controller.Display"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:unified="sap.ui.unified"
    xmlns:t="sap.ui.table"
    xmlns:rm="sap.ui.table.rowmodes"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:sv="sap.ui.comp.smartvariants"
    height="100%"
    busyIndicatorDelay="0"
>
    <f:DynamicPage id="idDynamicPage">
        <f:title>
            <f:DynamicPageTitle id="idDynamicPageTitle">
                <f:heading>
                    <sv:SmartVariantManagement
                        id="idSmartVariantManagement"
                        showShare="true"
                        persistencyKey="uploadPurchaseReqFilter"
                        showExecuteOnSelection="true"
                        entitySet="ZC_BDGLACCOUNT"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader id="idDynamicPageHeader">
                <f:content>
                    <!--数据查询-->
                    <smartFilterBar:SmartFilterBar
                        id="idSmartFilterBar"
                        smartVariant="idSmartVariantManagement"
                        persistencyKey="uploadPurchaseReq"
                        entitySet="PurchaseReq"
                        useToolbar="false"
                        class="sapUiResponsiveMargin"
                    >
                        <smartFilterBar:controlConfiguration>
                            <smartFilterBar:ControlConfiguration
                                id="idControlConfiguration"
                                key="PrNo"
                                visibleInAdvancedArea="true"
                                label="{i18n>PrNo}"
                                mandatory="notMandatory"
                                index="1"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id0ControlConfiguration"
                                key="Supplier"
                                visibleInAdvancedArea="true"
                                label="{i18n>Supplier}"
                                mandatory="notMandatory"
                                index="5"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id1ControlConfiguration"
                                key="PurchaseGrp"
                                visibleInAdvancedArea="true"
                                label="{i18n>PurchaseGrp}"
                                mandatory="notMandatory"
                                index="10"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id2ControlConfiguration"
                                key="PrBy"
                                visibleInAdvancedArea="true"
                                label="{i18n>PrBy}"
                                mandatory="notMandatory"
                                index="15"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id3ControlConfiguration"
                                key="Plant"
                                visibleInAdvancedArea="true"
                                label="{i18n>Plant}"
                                mandatory="notMandatory"
                                index="20"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id4ControlConfiguration"
                                key="MatID"
                                visibleInAdvancedArea="true"
                                label="{i18n>MatID}"
                                mandatory="notMandatory"
                                index="25"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id5ControlConfiguration"
                                key="CreatedAt"
                                visibleInAdvancedArea="true"
                                label="{i18n>CreatedAt}"
                                mandatory="notMandatory"
                                index="30"
                            >
                                <smartFilterBar:customControl>
                                    <DatePicker
                                        id="idDatePicker"
                                        valueFormat="yyyyMMdd"
                                        displayFormat="yyyy-MM-dd"
                                    />
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>
                            <smartFilterBar:ControlConfiguration
                                id="id6ControlConfiguration"
                                key="CostCenter"
                                visibleInAdvancedArea="true"
                                label="{i18n>CostCenter}"
                                mandatory="notMandatory"
                                index="35"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id7ControlConfiguration"
                                key="AssetNo"
                                visibleInAdvancedArea="true"
                                label="{i18n>AssetNo}"
                                mandatory="notMandatory"
                                index="40"
                            />
                            <smartFilterBar:ControlConfiguration
                                key="ApproveStatus"
                                visibleInAdvancedArea="true"
                                label="{i18n>ApproveStatus}"
                                mandatory="notMandatory"
                                index="41"
                            > 
                                <smartFilterBar:customControl>
                                    <Select id="idApproveStatusSelect" >
                                        <core:ListItem key="0" text="" />
                                        <core:ListItem key="1" text="{i18n>Status1Text}" />
                                        <core:ListItem key="2" text="{i18n>Status2Text}" />
                                        <core:ListItem key="3" text="{i18n>Status3Text}" />
                                        <core:ListItem key="4" text="{i18n>Status4Text}" />
                                    </Select>
                                </smartFilterBar:customControl>
                            </smartFilterBar:ControlConfiguration>
                            <smartFilterBar:ControlConfiguration
                                id="id8ControlConfiguration"
                                key="WbsElemnt"
                                visibleInAdvancedArea="true"
                                label="{i18n>WbsElemnt}"
                                mandatory="notMandatory"
                                index="45"
                            />
                            <smartFilterBar:ControlConfiguration
                                id="id9ControlConfiguration"
                                key="Kyoten"
                                visibleInAdvancedArea="true"
                                label="{i18n>Kyoten}"
                                mandatory="notMandatory"
                                index="50"
                            />
                        </smartFilterBar:controlConfiguration>
                    </smartFilterBar:SmartFilterBar>
                </f:content>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <smartTable:SmartTable
                id="idSmartTable"
                entitySet="ZC_BDGLACCOUNT"
                smartFilterId="idSmartFilterBar"
                smartVariant="idSmartVariantManagement"
                persistencyKey="uploadPurchaseReqTable"
                header="{i18n>tableHeaderTitle}"
                placeToolbarInTable="true"
                
                beforeRebindTable="onBeforeRebindTable"
            >
                <smartTable:customToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://document"
                            type="Transparent"
                            text="{i18n>DisplayView.CreateBtn}"
                            press="createPurchseOrder"
                        />
                    </OverflowToolbar>
                </smartTable:customToolbar>
                <t:Table
                    id="idPurchaseReqTable"
                    rowActionCount="1"
                >
                    <t:rowMode>
                        <rm:Auto id="idAuto" />
                    </t:rowMode>
 
                </t:Table>
            </smartTable:SmartTable>
        </f:content>
    </f:DynamicPage>
</mvc:View>