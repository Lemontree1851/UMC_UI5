<mvc:View controllerName="sd.creditmantable.controller.View1"
		height="100%"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:core="sap.ui.core"
		xmlns="sap.m"
		xmlns:f="sap.f"
		xmlns:fb="sap.ui.comp.filterbar"
		xmlns:svm="sap.ui.comp.smartvariants">
		<f:DynamicPage headerExpanded="{/headerExpanded}">
			<f:title>
				<f:DynamicPageTitle>
					<f:heading>
						<svm:SmartVariantManagement id="svm" showExecuteOnSelection="true" />
					</f:heading>
					<f:expandedContent>
						<Label id="expandedLabel" text="{i18n>headT}" />
					</f:expandedContent>
					<f:snappedContent>
						<Label id="snappedLabel" text="{i18n>headT}"  />
					</f:snappedContent>
				</f:DynamicPageTitle>
			</f:title>
			<f:header>
				<f:DynamicPageHeader>
					<f:content>
						<fb:FilterBar id="filterbar" persistencyKey="myPersKey" useToolbar="false" search=".onSearch" filterChange=".onFilterChange" afterVariantLoad=".onAfterVariantLoad">
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="SalesOrganization" label="{i18n>SalesOrganization}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="SalesOrganization"
											selectionChange=".onSelectionChange"
											items="{
												path: '/SalesOrganization',
												templateShareable: true
											}"
										>
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="Customer" label="{i18n>Customer}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="Customer"
											selectionChange=".onSelectionChange"
											items="{
												path: '/ProductCategories',
												templateShareable: true
											}"
										>
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
								<fb:FilterGroupItem name="zyear" label="{i18n>zyear}" groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										<MultiComboBox
											name="zyear"
											selectionChange=".onSelectionChange"
					
										>
											<core:Item key="{key}" text="{name}"/>
										</MultiComboBox>
									</fb:control>
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
                <Table
                    headerText="検索結果"
                    items="{
                        path:'/ProductCollection',
                        sorter: {
                            path: 'SupplierName',
                            descending: false
                        }
                    }" >
                    <columns>
                        <Column mergeDuplicates="true" minScreenWidth="Tablet">
                            <header>
                                <Text text="得意先" />
                            </header>
                        </Column>
                        <Column mergeDuplicates="true" minScreenWidth="Tablet">
                            <header>
                                <Text text="得意先名" />
                            </header>
                        </Column>
                        <Column mergeDuplicates="true" minScreenWidth="Tablet">
                            <header>
                                <Text text="与信限度額" />
                            </header>
                        </Column>
                        <Column minScreenWidth="Tablet">
                            <header>
                                <Text text="回収条件" />
                            </header>
                        </Column>
                        <Column minScreenWidth="Tablet">
                            <header>
                                <Text text="項目" />
                            </header>
                        </Column>
                        <Column minScreenWidth="Tablet">
                            <header>
                                <Text text="年度" />
                            </header>
                        </Column>
                    </columns>
                    <ColumnListItem vAlign="Middle">
                        <Text text="1" />
                        <ObjectIdentifier title="{Name}" text="{ProductId}" />
                        <Text text="{Width} x {Depth} x {Height} {DimUnit}" />
                        <ObjectNumber
                            number="{WeightMeasure}" unit="{WeightUnit}"
                            state="{
                                path: 'WeightMeasure',
                                formatter: 'sap.m.sample.TableMergeCells.Formatter.weightState'
                            }" />
                        <ObjectNumber
                                number="{
                                    parts:[{path:'Price'},{path:'CurrencyCode'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {showMeasure: false}
                                }"
                                unit="{CurrencyCode}" />
                    </ColumnListItem>
                </Table>

			</f:content>
		</f:DynamicPage>








</mvc:View>
