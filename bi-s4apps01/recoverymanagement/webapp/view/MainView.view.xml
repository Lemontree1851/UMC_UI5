<mvc:View controllerName="recoverymanagement.controller.MainView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" showHeader="false" title="{i18n>title}">
        <content>
            <IconTabBar id="idIconTabBar" expandable="true" expanded="{device>/isNoPhone}" class="sapUiNoContentPadding" applyContentPadding="false" stretchContentHeight="true">
                <items>
                    <IconTabFilter id="idTabFilter1" text="{i18n>title1}" key="title1">
                        <mvc:XMLView id="idMasterView" viewName="recoverymanagement.view.MasterMaintain" />
                    </IconTabFilter>
                    <IconTabFilter id="idTabFilter2" text="{i18n>title2}" key="title2">
                        <Text id="txtFilter2" text="Attachments go here ..." />
                    </IconTabFilter>
                    <IconTabFilter id="idTabFilter3" text="{i18n>title3}" key="title3">
                        <Text id="txtFilter3" text="Notes go here ..." />
                    </IconTabFilter>
                    <IconTabFilter id="idTabFilter4" text="{i18n>title4}" key="title4">
                        <Text id="txtFilter4" text="People content goes here ..." />
                    </IconTabFilter>
                    <IconTabFilter id="idTabFilter5" text="{i18n>title5}" key="title5">
                        <Text id="txtFilter5" text="People content goes here ..." />
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>
