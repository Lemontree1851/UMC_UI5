<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:unified="sap.ui.unified"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartTable="sap.ui.comp.smarttable">
    <smartTable:SmartTable entitySet="COSTANALYSISPROCESS" smartFilterId="idSmartFilterBar2" 
    tableType="Table" width="100%" showRowCount="true" useVariantManagement="false" useTablePersonalisation="true" 
    persistencyKey="StandardListST" header="{i18n>Results}" enableAutoBinding="false" placeToolbarInTable="true" 
    visible="{= ${local>/selectIndex} === 1}" beforeRebindTable="onBeforeRebindTable" beforeExport="onBeforeExport" 
    showFullScreenButton="true" >

        <table:Table id="idStandardListTable" selectionMode="MultiToggle" rowMode="Auto">
            <table:columns>
                <table:Column width="4rem" label="{i18n>YearMonth}" sortProperty="YearMonth" filterProperty="YearMonth">
                    <table:customData>
                        <core:CustomData key="p13nData" value='\{"columnKey":"YearMonth", "leadingProperty":"YearMonth"}'/>
                    </table:customData>
                    <table:template>
                        <Text text="{YearMonth}" wrapping="false"/>
                    </table:template>
                </table:Column>
                <table:Column width="6rem" label="{i18n>Companycode}" sortProperty="Companycode" filterProperty="Companycode">
                    <table:customData>
                        <core:CustomData key="p13nData" value='\{"columnKey":"Companycode", "leadingProperty":"Companycode"}'/>
                    </table:customData>
                    <table:template>
                        <Text text="{Companycode}" wrapping="false" />
                    </table:template>
                </table:Column>
                <table:Column width="6rem" label="{i18n>CompanycodeText}" sortProperty="CompanycodeText" filterProperty="CompanycodeText">
                    <table:customData>
                        <core:CustomData key="p13nData" value='\{"columnKey":"CompanycodeText", "leadingProperty":"CompanycodeText"}'/>
                    </table:customData>
                    <table:template>
                        <Text text="{CompanycodeText}" wrapping="false" />
                    </table:template>
                </table:Column>   




            </table:columns>
        </table:Table>
    </smartTable:SmartTable>
</core:FragmentDefinition>