<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:table="sap.ui.table">
    <Dialog title="{i18n>ChangeAssignQty}" draggable="true">
        <Panel expandable="false" expanded="true" width="auto">
            <VBox >
                <Text text="{i18n>AssignQty}"/>
                <Input value="{ path: 'local>/SelectedItem/AssignQty', type: 'sap.ui.model.type.Integer', constraints: { minimum:0 } }" liveChange="handleChange" type="Number"/>
            </VBox>
        </Panel>
    </Dialog>
</core:FragmentDefinition>