<mvc:View controllerName="pp.zorderforecastupload.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified"
    xmlns:upload="sap.m.upload"
    xmlns:table="sap.ui.table">
    <Page >
        <content>
            <Panel expandable="true" expanded="false" headerText="{i18n>templateText}" width="auto">
                <upload:UploadSet id="idTemplateCollection" items="{ path : 'Attach>/Configuration', filters : { path : 'Object', operator : 'StartsWith', value1 : 'ZUPLOAD_OF' } }" multiple="true" uploadEnabled="false" uploadButtonInvisible="true" instantUpload="false">
                    <upload:items>
                        <upload:UploadSetItem fileName="{Attach>TemplateName}" mediaType="{Attach>TemplateMimeType}" url="{Attach>TemplateContent}" visibleEdit="false" visibleRemove="false"/>
                    </upload:items>
                </upload:UploadSet>
            </Panel>
            <Panel id="idFileUploadPanel" expandable="true" expanded="true" headerText="{i18n>uploadText}" width="auto">
                <unified:FileUploader id="idFileUploader" fileType="xlsx,xls" change="onFileChange" width="40%" class="sapUiSmallMargin"/>
            </Panel>
            <Panel expandable="true" expanded="true" headerText="{i18n>result}" width="auto">
                <table:Table rows="{local>/excelSet}" selectionMode="Multi" fixedColumnCount="5" rowMode="Interactive" class="sapUiSizeCompact">
                    <table:extension>
                        <OverflowToolbar>
                            <Text text="{local>/logInfo}"/>
                            <ToolbarSpacer/>
                            <Button id="idClearButton" icon="sap-icon://clear-all" type="Transparent" text="{i18n>clearBtn}" press="onClear" visible="{= ${local>/excelSet}.length > 0}"/>
                            <Button id="idCheckButton" icon="sap-icon://check-availability" type="Transparent" text="{i18n>checkBtn}" press="onCheck" visible="{= ${local>/excelSet}.length > 0}"/>
                            <Button id="idExcuteButton" icon="sap-icon://document" type="Transparent" text="{i18n>excuteBtn}" press="onExcute" visible="{= ${local>/excelSet}.length > 0}"/>
                            <Button id="idExportButton" icon="sap-icon://excel-attachment" type="Transparent" text="{i18n>exportBtn}" press="onExport" visible="{= ${local>/excelSet}.length > 0}"/>
                        </OverflowToolbar>
                    </table:extension>
                    <table:columns>
                        <table:Column autoResizable="true" width="6rem" label="{i18n>Status}">
                            <table:template>
                                <ObjectStatus state="{ path:'local>Status',formatter:'.formatter.formatState' }" icon="sap-icon://status-positive"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="15rem" label="{i18n>Message}">
                            <table:template>
                                <Text text="{local>Message}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="15rem" label="{i18n>Material}">
                            <table:template>
                                <Text text="{local>Material}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="6rem" label="{i18n>Plant}">
                            <table:template>
                                <Text text="{local>Plant}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ProductionVersion}">
                            <table:template>
                                <Text text="{local>ProductionVersion}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="15rem" label="{i18n>ProductionVersionText}">
                            <table:template>
                                <Text text="{local>ProductionVersionText}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ValidityStartDate}">
                            <table:template>
                                <Text text="{ path:'local>ValidityStartDate1',formatter:'.formatter.formatDate' }" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ValidityEndDate}">
                            <table:template>
                                <Text text="{ path:'local>ValidityEndDate1',formatter:'.formatter.formatDate' }" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ExecBillOfOperationsType}">
                            <table:template>
                                <Text text="{local>ExecBillOfOperationsType}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ExecBillOfOperationsGroup}">
                            <table:template>
                                <Text text="{local>ExecBillOfOperationsGroup}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ExecBillOfOperationsVariant}">
                            <table:template>
                                <Text text="{local>ExecBillOfOperationsVariant}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>BillOfMaterialVariantUsage}">
                            <table:template>
                                <Text text="{local>BillOfMaterialVariantUsage}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>BillOfMaterialVariant}">
                            <table:template>
                                <Text text="{local>BillOfMaterialVariant}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ProductionLine}">
                            <table:template>
                                <Text text="{local>ProductionLine}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>IssuingStorageLocation}">
                            <table:template>
                                <Text text="{local>IssuingStorageLocation}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                        <table:Column width="10rem" label="{i18n>ReceivingStorageLocation}">
                            <table:template>
                                <Text text="{local>ReceivingStorageLocation}" wrapping="false"/>
                            </table:template>
                        </table:Column>
                    </table:columns>
                </table:Table>
            </Panel>
        </content>
    </Page>
</mvc:View>
